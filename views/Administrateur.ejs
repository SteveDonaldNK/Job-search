          <div class="form-floating tab d-none">
            <form class="offer-form">
              <div class="toast-container">
                <div class="toast shadow-sm p-3 rounded" >Hello, world!</div>
              </div>
              
              <label for="title">Intitule *</label>
              <input name="titre" type="email" class="form-control mb-4" id="title" placeholder="Titre de l'offre" required>
              <label for="employer">Entreprise *</label>
              <input name="entreprise" type="email" class="form-control mb-4" id="employer" placeholder="Nom de l'entreprise" required>
              <select name="categorie" class="form-select mb-4" id="floatingSelect" aria-label="Floating label select example" required>
                <option selected>Choisir une categorie *</option>
                <option value="Informatique">Informatique</option>
                <option value="Agriculture">Agriculture</option>
                <option value="Elevage">Elevage</option>
              </select>
              <label for="web">Site web</label>
              <input name="site" type="email" class="form-control mb-4" id="web" placeholder="Site web de l'entreprise" >
              <label for="floatingTextarea">Description *</label>
              <textarea name="description" class="form-control mb-4" style="height: 30vh" placeholder="Description ici" id="floatingTextarea" required></textarea>
              <label for="formFile" class="form-label">Images (maximum 5)</label>
              <input name="image" class="form-control mb-4" type="file" accept="image/*" id="formFile" multiple="5">
